<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/preview"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/article_demo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/preview"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/preview"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:text="В СГУ прошла Всемирная акция «Тотальный диктант»"
        android:textColor="#DB000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="3"
        android:text="8 апреля в XI и XII корпусах Саратовского университета прошла акция проверки грамотности «Тотальный диктант». Автором текста в этом году стал писатель Леонид Юзефович. Он описал три своих любимых города: Пермь, Улан-Удэ и Санкт-Петербург. В соответствии с часовым поясом Саратову досталась третья часть – «Город на реке. Улан-Удэ. Селенга»."
        android:textColor="#8B000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pub_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/preview"
        android:layout_alignRight="@id/description"
        android:fontFamily="sans-serif"
        android:text="10.04.17 10:32"
        android:textColor="#DB000000"
        android:textSize="12sp" />

</RelativeLayout>